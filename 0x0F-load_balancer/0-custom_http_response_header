#!/usr/bin/env bash

# Update package information
sudo apt-get update

# Install Nginx
sudo apt-get install -y nginx

# Get the hostname
HOSTNAME=$(hostname)

# Add custom response header to Nginx default configuration
HEADER="\\\n\tadd_header X-Served-By $HOSTNAME;\n"
CONFIG_FILE="/etc/nginx/sites-available/default"
