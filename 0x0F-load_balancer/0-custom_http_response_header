#!/bin/bash

# Install Nginx with the -y flag
sudo apt-get update
sudo apt-get install -y nginx

# Configure Nginx to include a custom HTTP response header
sudo bash -c 'cat <<EOL > /etc/nginx/sites-available/default
server {
    listen 80 default_server;

    root /var/www/html;
    index index.html;

    server_name _;

    location / {
        try_files \$uri \$uri/ =404;
    }

    add_header X-Served-By \$hostname;
}
EOL'

# Restart Nginx
sudo service nginx restart

# Output success message
echo "Nginx configured with custom HTTP response header successfully!"

